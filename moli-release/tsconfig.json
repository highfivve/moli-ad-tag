{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES6", "ES2015", "ESNext"],
    "outDir": "lib",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "removeComments": true
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src/types"
  ],
  "exclude": [
    "node_modules"
  ]
}
