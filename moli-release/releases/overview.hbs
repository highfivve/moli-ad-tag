<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>AdTag Overview - {{publisher}}</title>

  {{> partials/head }}

  {{#each releases.versions}}
    {{var "isCurrentVersion" (equals version ../releases.currentVersion)}}
    {{#if isCurrentVersion}}
  <meta property="og:site_name" content="Highfivve {{../publisher}} ad tag"/>
  <meta property="og:title" content="{{../publisher}} ad tag (latest: v{{version}})">
  <meta property="og:description" content="Changes in v{{version}}:
    {{#unless (empty changelog) ~}}{{~#each changelog ~}}{{~ this}}
    {{/each ~}}{{~/unless}}">
    {{/if}}
  {{/each}}
</head>

<body>
<div class="jumbotron">
  <h1 class="display-4">{{publisher}} Moli AdTag</h1>
  <div class="d-flex justify-content-center">
    <a class="btn btn-info btn-lg mt-4" href="/{{releases.currentVersion}}/">
      <i class="fa fa-rocket"></i>
      <span>Neueste Version</span>
    </a>
  </div>
</div>
<div class="container-fluid">
  <div>
    <h3>Ältere Versionen:</h3>
    <div class="row">
      {{#each releases.versions}}
        {{var "isCurrentVersion" (equals version ../releases.currentVersion)}}
        <div class="col-lg-4 col-md-6 col-sm-12">
          <div class="card mb-4{{#if isCurrentVersion}} text-white bg-info{{/if}}">
            <strong class="card-header d-flex align-items-center">
              Version {{version}}
              {{#if isCurrentVersion}}<span class="badge badge-pill badge-warning ml-2">Neueste Version</span>{{/if}}
            </strong>
            <div class="list-group list-group-flush">
              <div class="list-group-item{{#if isCurrentVersion}} bg-info{{/if}}">
                <h5 class="card-title mb-2">Änderungen</h5>
                <div class="card-text">
                  {{#if (empty changelog)}}
                    <em class="text-muted">Keine Änderungen angegeben</em>
                  {{else}}
                    <ol>
                      {{#each changelog}}
                        <li>{{this}}</li>
                      {{/each}}
                    </ol>
                  {{/if}}
                </div>
              </div>
              <div class="list-group-item{{#if isCurrentVersion}} bg-info{{/if}}">
                <h5 class="card-title mb-2">Code</h5>
                <pre><code class="language-html">
                    {{~#if filenameEs5~}}
&lt;!-- legacy es5 bundle (IE11) --&gt;
&lt;script async nomodule src="https://{{../publisher}}.h5v.eu/{{version}}/{{filenameEs5}}"&gt;&lt;/script&gt;{{/if}}
&lt;!-- modern es6 bundle --&gt;
&lt;script async type="module" src="https://{{../publisher}}.h5v.eu/{{version}}/{{filename}}"&gt;&lt;/script&gt;{{"\n"~}}
                  </code></pre>
              </div>
            </div>
            <div class="card-footer text-center py-0 px-3">
              <div class="row">
                <a class="{{#if filenameEs5}}col-4{{else}}col-6{{/if}} d-block py-2{{#if
                  isCurrentVersion}} text-warning{{/if}}"
                   href="/{{version}}/">Demo page</a>
                <a class="{{#if filenameEs5}}col-4{{else}}col-6{{/if}} border-left d-block py-2{{#if
                  isCurrentVersion}} text-warning{{/if}}"
                   href="/{{version}}/{{filename}}"><span class="badge badge-pill badge-danger">ES6</span>
                  moli.min.mjs</a>
                {{#if filenameEs5}}
                  <a class="col-4 border-left d-block py-2{{#if
                    isCurrentVersion}} text-warning{{/if}}"
                     href="/{{version}}/{{filenameEs5}}"><span class="badge badge-pill badge-warning">ES5</span>
                    moli_es5.min.js</a>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>

{{> partials/foot }}
</body>

</html>
