{
  "name": "@highfivve/ad-tag",
  "version": "3.14.3",
  "license": "Apache-2.0",
  "description": "An ad tag implementation called moli",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "setup": "yarn",
    "make:nodemodule": "tsc -p tsconfig.build.json",
    "start": "yarn watch",
    "watch": "yarn compile:ts:watch",
    "compile": "yarn compile:ts",
    "compile:ts": "tsc --noEmit",
    "compile:ts:watch": "tsc --noEmit --watch",
    "lint": "yarn lint:ts",
    "lint:ts": "tslint --project tsconfig.json && yarn prettier",
    "lint:ts:fix": "tslint --project tsconfig.json --fix && yarn prettier --write",
    "test": "mocha --require ts-node/register tests/**/*.test.ts",
    "test:junit": "mocha --forbid-only --reporter mocha-junit-reporter --reporter-options mochaFile=./temp/test-results.xml --require ts-node/register tests/**/*.test.ts",
    "prettier": "prettier --config ../.prettierrc --ignore-path ../.prettierignore --check \"(source|tests)/**/*.ts*\"",
    "docs": "yarn typedoc --readme source/ts/types/README.md --theme default --out docs/ source/ts/types/",
    "validate": "yarn compile && yarn lint && yarn test && yarn docs",
    "validate:github": "yarn compile && yarn lint && yarn test:junit",
    "validate:jenkins": "yarn compile && yarn lint && yarn test:junit"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:highfivve/moli-ad-tag.git",
    "directory": "ad-tag"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "engines": {
    "node": ">=8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@types/chai": "4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/domready": "^1.0.0",
    "@types/jsdom": "16.2.4",
    "@types/mocha": "8.0.3",
    "@types/sinon": "9.0.8",
    "@types/sinon-chai": "3.2.5",
    "babel-loader": "^8.1.0",
    "chai": "4.2.0",
    "chai-as-promised": "^7.1.1",
    "jsdom": "16.4.0",
    "mocha": "8.2.0",
    "mocha-junit-reporter": "2.0.0",
    "sinon": "9.2.0",
    "sinon-chai": "3.5.0",
    "ts-loader": "^8.0.5",
    "ts-node": "9.0.0",
    "tslint": "^6.1.3",
    "tslint-loader": "^3.5.4",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^4.0.0"
  }
}
