{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "preact.h",
    "strict": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "es6",
      "scripthost"
    ],
    "module": "amd",
    "moduleResolution": "node",
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "outDir": "./dist"
  },
  "files": [
    "debug.tsx"
  ],
  "include": [
    "components/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
