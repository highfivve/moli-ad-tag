{
  "name": "moli-ad-tag",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "description": "An ad tag implementation called moli",
  "scripts": {
    "start": "yarn watch",
    "watch": "yarn clean:build && yarn build:ts:watch",
    "build": "yarn clean:build && yarn build:ts",
    "build:prod": "yarn build --mode=production",
    "build:ts": "webpack",
    "build:ts:watch": "webpack --watch",
    "test": "rm -rf ./temp/* && yarn -s test:transpile && ava --verbose",
    "test:tap": "yarn -s test:transpile && ava --tap | tap-xunit --dontUseCommentsAsTestNames=true > temp/test-report.xml",
    "test:transpile": "tsc --outDir ./temp",
    "test:watch": "rm -rf ./temp/* && yarn -s test:transpile && concurrently 'yarn -s test:transpile --watch' 'ava --watch --verbose'",
    "lint": "yarn lint:ts",
    "lint:ts": "tslint --project tsconfig.json",
    "lint:ts:fix": "tslint --project tsconfig.json --fix",
    "clean": "yarn clean:build && yarn clean:test",
    "clean:build": "rm -rf ./public/*",
    "clean:test": "rm -rf ./temp/*"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@git.gutefrage.net:7999/gd/moli-ad-tag.git"
  },
  "engines": {
    "node": ">=8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@types/domready": "^1.0.0",
    "babel-loader": "^8.0.2",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.2.3",
    "fork-ts-checker-webpack-plugin": "^0.4.9",
    "ignore-assets-webpack-plugin": "^2.0.0",
    "ts-loader": "^4.2.0",
    "tslint": "^5.11.0",
    "tslint-loader": "^3.5.3",
    "typescript": "^3.1.4",
    "webpack": "^4.22.0",
    "webpack-clean-obsolete-chunks": "^0.4.0",
    "webpack-cli": "^2.0.15"
  },
  "dependencies": {
    "domready": "^1.0.8"
  }
}
