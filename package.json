{
  "name": "moli-ad-tag",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "description": "An ad tag implementation called moli",
  "main": "source/ts/index.ts",
  "scripts": {
    "postinstall": "yarn link",
    "start": "yarn watch",
    "watch": "yarn compile:ts:watch",
    "compile": "yarn compile:ts",
    "compile:ts": "tsc --noEmit",
    "compile:ts:watch": "tsc --noEmit --watch",
    "lint": "yarn lint:ts",
    "lint:ts": "tslint --project tsconfig.json",
    "lint:ts:fix": "tslint --project tsconfig.json --fix",
    "test": "mocha --require ts-node/register tests/**/*.test.ts",
    "test:junit": "mocha --forbid-only --reporter mocha-junit-reporter --require ts-node/register tests/**/*.test.ts",
    "build:debug": "cd moli-debugger && yarn && yarn build",
    "build:examples": "rm -rf dist && mkdir dist && yarn build:example:self-contained && yarn build:example:lazy-init",
    "build:example:self-contained": "mkdir -p dist/self-contained && cd examples/self-contained && yarn && yarn build && cp dist/* ../../dist/self-contained",
    "build:example:lazy-init": "mkdir -p dist/lazy-init && cd examples/lazy-init && yarn && yarn build && cp dist/* ../../dist/lazy-init",
    "docs": "yarn typedoc --readme source/ts/types/README.md --theme default --out docs/ source/ts/types/"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@git.gutefrage.net:7999/gd/moli-ad-tag.git"
  },
  "engines": {
    "node": ">=8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@types/chai": "^4.1.7",
    "@types/domready": "^1.0.0",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^5.0.5",
    "@types/sinon-chai": "^3.2.0",
    "babel-loader": "^8.0.2",
    "browser-env": "^3.2.5",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "sinon": "^7.1.1",
    "sinon-chai": "^3.2.0",
    "ts-loader": "^5.2.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-loader": "^3.5.3",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6",
    "webpack": "^4.22.0",
    "webpack-cli": "^3.1.1"
  },
  "dependencies": {
    "domready": "^1.0.8"
  }
}
