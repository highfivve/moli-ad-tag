{
  "version": "3.9.8",
  "private": true,
  "workspaces": [
    "ad-tag",
    "moli-debugger",
    "moli-release",
    "modules/*",
    "examples/*"
  ],
  "scripts": {
    "setup": "yarn && lerna bootstrap && yarn workspace @highfivve/ad-tag tsc",
    "postinstall": "mkdir -p node_modules/@types/prebid.js && cp examples/prebid/prebidjs.d.ts node_modules/@types/prebid.js/index.d.ts",
    "preversion": "yarn workspaces run validate",
    "postversion": "git push && git push --tags",
    "clean:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:lib": "find . -name 'lib' -type d -prune -exec rm -rf '{}' +",
    "clean": "yarn clean:node_modules && yarn clean:lib"
  },
  "devDependencies": {
    "lerna": "^3.22.1",
    "prebid.js": "3.16.0",
    "prettier": "^2.1.2",
    "typescript": "^4.0.2"
  },
  "bin": {
    "moli-release": "moli-release/bin/moli-release"
  }
}
