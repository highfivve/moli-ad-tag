{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "lib": [ "dom", "es6", "scripthost" ],
    "baseUrl": ".",
    "paths": {
      "browser-env": [ "source/ts/types/browserEnv" ]
    },
    // we need this for importing the cmpFaktorStub.js file
    "allowJs": true
  },
  "include": [
    "source/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "examples/**"
  ]
}
